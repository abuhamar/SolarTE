                </group>
            </group>
			<!--MATERIAL PROPERTIES-->
			<!--<group id="array">
				<about><enable>0</enable></about>
				<string id="ntype">
					<about><label>n-type</label></about>
					<default>0</default>
				</string>
				<string id="ptype">
					<about><label>p-type</label></about>
					<default>0</default>
				</string>
			</group>-->
			
			<string id="TTop">
				<about><label>Heat source temperature (K)</label></about>
				<default>500</default>
			</string>
			<string id="TBot">
				<about><label>Ambient temperature (K)</label></about>
				<default>300</default>
			</string>
			
			<string id="area">
				<about>
					<label>Total surface area (mm^2)</label>
					<enable>input.phase(mat).group(horizontal).group(ind).choice(choice) != 2</enable>
				</about>
				<default>100</default>
			</string>
			<string id="gap">
				<about><label>Thermal conductivity of gap filler (W/mK)</label></about>
				<default>0.03</default>
			</string>
			<string id="sink">
				<about><label>Heat sink heat transfer coefficient (W/m^2-K)</label></about>
				<default>10</default>
			</string>
			
			<string id="coeff">
				<about><label>Hot side heat transfer coefficient (W/m^2-K)</label></about>
				<default>10</default>
			</string>
			
			<choice id="Match">
				<about>
					<label>Load Matching</label>
					<enable>input.phase(mat).group(horizontal).group(ind).choice(choice) != 3</enable>
				</about>
				<option id="1">
					<about><label>Yes</label></about>
					<value>1</value>
				</option>
				<option id="2">
					<about><label>No</label></about>
					<value>0</value>
				</option>
				<default>0</default>
			</choice>
			<string id="R_L">
				<about>
					<label>Load resistance (Ohm)</label>
					<enable>
						input.phase(mat).group(horizontal).group(ind).choice(choice) != 3 &amp;&amp;
						input.phase(mat).choice(Match) == 0
					</enable>
				</about>
				<default>10</default>
			</string>
			
			<string id="fill">
				<about><label>Fractional coverage</label></about>
				<default>0.1</default>
			</string>
			<string id="narea">
				<about>
					<label>Area of n-type elements (mm^2)</label>
					<enable>input.phase(mat).group(horizontal).group(ind).choice(choice) != 2</enable>
				</about>
				<default>0.25</default>
			</string>
			<string id="parea">
				<about>
					<label>Area of p-type elements (mm^2)</label>
					<enable>input.phase(mat).group(horizontal).group(ind).choice(choice) != 2</enable>
				</about>
				<default>0.25</default>
			</string>
			<string id="thick">
				<about>
					<label>Thickness of both elements (mm)</label>
					<enable>input.phase(mat).group(horizontal).group(ind).choice(choice) != 1</enable>
				</about>
				<default>1</default>
			</string>
			
			<string id="nEC">
				<about>
					<label>Electrical Conductivity of n-type elements (1/Ohm-cm)</label>
					<enable>input.phase(mat).group.group(prop).choice == 1</enable>
				</about>
				<default>600</default>
			</string>
			<string id="nSC">
				<about>
					<label>Seebeck Coefficient of n-type elements (uV/K)</label>
					<enable>input.phase(mat).group.group(prop).choice == 1</enable>
				</about>
				<default>-150</default>
			</string>
			<string id="nTC">
				<about>
					<label>Thermal Conductivity of n-type elements (W/mK)</label>
					<enable>input.phase(mat).group.group(prop).choice == 1</enable>
				</about>
				<default>1.5</default>
			</string>
			<string id="pEC">
				<about>
					<label>Electrical Conductivity of p-type elements (1/Ohm-cm)</label>
					<enable>input.phase(mat).group.group(prop).choice == 1</enable>
				</about>
				<default>600</default>
			</string>
			<string id="pSC">
				<about>
					<label>Seebeck Coefficient of p-type elements (uV/K)</label>
					<enable>input.phase(mat).group.group(prop).choice == 1</enable>
				</about>
				<default>150</default>
			</string>
			<string id="pTC">
				<about>
					<label>Thermal Conductivity of p-type elements (W/mK)</label>
					<enable>input.phase(mat).group.group(prop).choice == 1</enable>
				</about>
				<default>1.5</default>
			</string>
			
			<!--DRAWING-->
			<drawing>
				<background>
					<color>#D8D8D8</color>
					<coordinates>0 0 1 1</coordinates>
					<height>370</height>
					<width>450</width>
				</background>
				<components>
					<pictures>
						<coords>0.55 0.5</coords>
						<anchor>c</anchor>
						<height>1</height>
						<width>0.65</width>
						<contents>file://module.jpg</contents>
					</pictures>
					<text>
						<coords>0.5 0.03</coords>
						<anchor>c</anchor>
						<text>Please click on each Blue Button below to modify the Input values</text>
						<font>Arial 11 bold</font>
					</text>
					
					<!--HOTSPOTS-->
					<hotspot>
						<coords>0.49 0.1</coords>
						<controls>input.phase(mat).string(TTop)</controls>
					</hotspot>
					<hotspot>
						<coords>0.49 0.93</coords>
						<controls>input.phase(mat).string(TBot)</controls>
					</hotspot>
					<hotspot>
						<coords>0.38 0.3</coords>
						<controls>input.phase(mat).string(area)</controls>
					</hotspot>
					<hotspot>
						<coords>0.27 0.5</coords>
						<controls>input.phase(mat).string(gap)</controls>
					</hotspot>
					<hotspot>
						<coords>0.35 0.73</coords>
						<controls>input.phase(mat).string(sink)</controls>
					</hotspot>
					<hotspot>
						<coords>0.61 0.3</coords>
						<controls>input.phase(mat).string(coeff)</controls>
					</hotspot>
					<hotspot>
						<coords>0.68 0.78</coords>
						<controls>input.phase(mat).choice(Match)</controls>
						<controls>input.phase(mat).string(R_L)</controls>
					</hotspot>
					<hotspot>
						<coords>0.73 0.5</coords>
						<controls>input.phase(mat).string(fill)</controls>
						<controls>input.phase(mat).string(narea)</controls>
						<controls>input.phase(mat).string(parea)</controls>
						<controls>input.phase(mat).string(thick)</controls>
						<controls>input.phase(mat).string(nEC)</controls>
						<controls>input.phase(mat).string(nSC)</controls>
						<controls>input.phase(mat).string(nTC)</controls>
						<controls>input.phase(mat).string(pEC)</controls>
						<controls>input.phase(mat).string(pSC)</controls>
						<controls>input.phase(mat).string(pTC)</controls>
					</hotspot>
					
					<!--LABELS-->
					<text>
						<coords>0.47 0.1</coords>
						<anchor>e</anchor>
						<text>Heat source temperature</text>
					</text>
					<text>
						<coords>0.47 0.93</coords>
						<anchor>e</anchor>
						<text>Ambient temperature</text>
					</text>
					<text>
						<coords>0.36 0.3</coords>
						<anchor>e</anchor>
						<text>Total surface area</text>
					</text>
					<text>
						<coords>0.25 0.5</coords>
						<anchor>e</anchor>
						<text>Gap filler</text>
					</text>
					<text>
						<coords>0.33 0.73</coords>
						<anchor>e</anchor>
						<text>Heat sink</text>
					</text>
					<text>
						<coords>0.63 0.3</coords>
						<anchor>w</anchor>
						<text>Hot side heat transfer coefficient</text>
					</text>
					<text>
						<coords>0.70 0.78</coords>
						<anchor>w</anchor>
						<text>Load resistance</text>
					</text>
					<text>
						<coords>0.75 0.5</coords>
						<anchor>w</anchor>
						<text>TE Elements</text>
					</text>
				</components>
			</drawing>
        </phase>
    </input>
	<output>
        <curve id="P_out">
            <about>
                <label>Power Output</label>
            </about>
            <yaxis>
				<label>Power Output (W)</label>
            </yaxis>
        </curve>
        <curve id="Eff">
            <about>
                <label>Efficiency</label>
            </about>
            <yaxis>
				<label>Efficiency (%)</label>
            </yaxis>
        </curve>
		<curve id="Cur">
            <about>
                <label>Resulting Current</label>
				<group>Current and Voltage vs Indepdendent Variable</group>
            </about>
            <yaxis>
				<label>Resulting Current (Amps)</label>
            </yaxis>
        </curve>
        <curve id="V_out">
            <about>
                <label>Voltage Accross Load</label>
				<group>Current and Voltage vs Indepdendent Variable</group>
            </about>
            <yaxis>
				<label>Voltage Accross Load (V)</label>
            </yaxis>
        </curve>
<!--3D Plots-->
		<mesh id="ncurve">
			<about>
				<label>Temperature Graph</label>
			</about>
			<dim>2</dim>
			<grid>
				<xaxis>
					<min>0</min>
					<max>1</max>
				</xaxis>
				<yaxis>
					<min>0</min>
					<max>1</max>
				</yaxis>
			</grid>
			<hide>yes</hide>
		</mesh>
		<field id="ncurve">
			<about>
				<label>N-Type Temperature Graph</label>
				<view>heightmap</view>
			</about>
			<component>
				<mesh>output.mesh(ncurve)</mesh>
			</component>
		</field>
		<mesh id="pcurve">
			<about>
				<label>Temperature Graph</label>
			</about>
			<dim>2</dim>
			<grid>
				<xaxis>
					<min>0</min>
					<max>1</max>
				</xaxis>
				<yaxis>
					<min>0</min>
					<max>1</max>
				</yaxis>
			</grid>
			<hide>yes</hide>
		</mesh>
		<field id="pcurve">
			<about>
				<label>P-Type Temperature Graph</label>
				<view>heightmap</view>
			</about>
			<component>
				<mesh>output.mesh(pcurve)</mesh>
			</component>
		</field>
<!--Material Properties-->
		<curve id="nSC_Plot">
            <about>
                <label>Seebeck Coefficient</label>
				<group>Seebeck Coefficient</group>
            </about>
			<xaxis>
				<label>Temperature (K)</label>
			</xaxis>
            <yaxis>
				<label>N-Type Seebeck Coefficient (uV/K)</label>
            </yaxis>
        </curve>
		<curve id="nTC_Plot">
            <about>
                <label>Thermal Conductivity</label>
				<group>Thermal Conductivity</group>
            </about>
			<xaxis>
				<label>Temperature (K)</label>
			</xaxis>
            <yaxis>
				<label>N-Type Thermal Conductivity (W/mK)</label>
            </yaxis>
        </curve>
        <curve id="nEC_Plot">
            <about>
                <label>Electrical Conductivity</label>
				<group>Electrical Conductivity</group>
            </about>
			<xaxis>
				<label>Temperature (K)</label>
			</xaxis>
            <yaxis>
				<label>N-Type Electrical Conductivity (1/Ohm-cm)</label>
            </yaxis>
        </curve>
		<curve id="pSC_Plot">
            <about>
                <label>Seebeck Coefficient</label>
				<group>Seebeck Coefficient</group>
            </about>
			<xaxis>
				<label>Temperature (K)</label>
			</xaxis>
            <yaxis>
				<label>P-Type Seebeck Coefficient (uV/K)</label>
            </yaxis>
        </curve>
		<curve id="pTC_Plot">
            <about>
                <label>Thermal Conductivity</label>
				<group>Thermal Conductivity</group>
            </about>
			<xaxis>
				<label>Temperature (K)</label>
			</xaxis>
            <yaxis>
				<label>P-Type Thermal Conductivity (W/mK)</label>
            </yaxis>
        </curve>
        <curve id="pEC_Plot">
            <about>
                <label>Electrical Conductivity</label>
				<group>Electrical Conductivity</group>
            </about>
			<xaxis>
				<label>Temperature (K)</label>
			</xaxis>
            <yaxis>
				<label>P-Type Electrical Conductivity (1/Ohm-cm)</label>
            </yaxis>
        </curve>
	</output>
</run>
